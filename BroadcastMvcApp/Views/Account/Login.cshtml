@using BroadcastMvcApp.ViewModels.Account
@model LoginViewModel

<link rel="stylesheet" href="~/css/LoginAccountStyle.css" />

<div class="login-body">
    <h1>Login</h1>

    <form class="form-container" asp-action="Login" method="post" asp-controller="Account">
        <div class="form-group">
            <label asp-for="@Model.Email">Email </label>
            <input asp-for="@Model.Email" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Password">Password</label>
            <input asp-for="@Model.Password" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <span>@Model?.ErrorMessages</span>
        </div>

        <tr>
            <div class="form-group">
                <div class="btn-group">
                    <input type="submit" class="submit-btn" value="login" />
                    <input type="reset" class="reset-btn" value="clear" />

                </div>
            </div>

            <a class="link-text" asp-action="Create" asp-controller="Account">
                <h6>don't have an account? click here to create new account</h6>
            </a>
    </form>
</div>